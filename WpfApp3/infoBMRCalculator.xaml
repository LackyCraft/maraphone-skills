<Window x:Class="WpfApp3.infoBMRCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="infoBMRCalculator" Height="300" Width="400"
        MinHeight="300" MinWidth="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Уровни активности" Height="28" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="- Сидячий образ: Нет работы или работа за столом " Margin="40,50,0,0" TextWrapping="Wrap"/>

            <TextBlock Text="- Маленькая активность: Мало физических работы или занятия спортом 1-3 раза в неделю" Margin="40,10,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="- Средняя активность: Умеренная физическая работа или занятия спортом 3 - 5 дней в неделю" Margin="40,10,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="- Сильная активность: Сильные физическая нагрузка или занятия спортом 6 - 7 дней в неделю" Margin="40,10,0,0" TextWrapping="Wrap"/>
            <TextBlock Text="- Максимальная активность: Сильная ежедневная физическая нагрузка или спорт и физическая работа" Margin="40,10,0,0" TextWrapping="Wrap"/>



        </StackPanel>
    </Grid>
</Window>
